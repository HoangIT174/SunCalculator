<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="suntime.swindroid.suncalculatorp.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <AutoCompleteTextView
            android:id="@+id/edt_input_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Input location" />

        <Button
            android:id="@+id/btn_search_location"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Search" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_display_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Melbourne"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun Rise"
                android:textColor="@color/yellow"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_display_time_sun_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:23"
                android:textColor="@color/yellow"
                android:textSize="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun Set"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_display_time_sun_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:23"
                android:textColor="@color/orange"
                android:textSize="60dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sunpic" />
    </LinearLayout>

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></DatePicker>

    <Button
        android:id="@+id/btn_add_new_location"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Add Location" />
</LinearLayout>
